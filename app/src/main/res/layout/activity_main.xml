<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context="com.example.nouman.myprofile.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:src="@drawable/noumankhan"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:id="@+id/profilePhoto"
            android:layout_marginRight="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pathan Noumankhan"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:id="@+id/nameText"
            android:layout_toRightOf="@id/profilePhoto"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="khan.nomaan21@gmail.com"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#555555"
            android:id="@+id/emailText"
            android:layout_toRightOf="@id/profilePhoto"
            android:layout_below="@id/nameText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 8087162672"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginBottom="16dp"
            android:id="@+id/phoneNumberText"
            android:layout_toRightOf="@id/profilePhoto"
            android:layout_below="@id/emailText"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/education"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Education"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work Experience"
            android:textColor="#FFFFFF" />


    </LinearLayout>


</LinearLayout>
